<h2>Edit Profile</h2>

<%= form_with model: @user, method: :patch, scope: :user, local: true do |form| %>

<div class="text-field">
  <%= form.label :name %>
  <%= form.text_field :name %>
</div>

<div class="field">
  <%= form.label :profile_photo %>
  <%= form.label :avatar do %>
  <%= form.file_field :avatar %>
  <%= form.hidden_field :avatar_cache %>
 <% end %>
</div>

<div>
  <%= form.submit "Update" %>
</div>

<% end %>
